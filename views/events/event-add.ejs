<div class="max-height">
  <div class="container">
      <div class="row">
        <h1 class="text-center">Create New Event</h1>
        <div class="form-style">
          <form method='POST' action='/events'>
          <div class="form-group">
            <input class="form-control" name='title' type='text' placeholder='title' />
          </div>
          <div class="form-group">  
            <input class="form-control" name='date' type="date" value="date" placeholder='date' />
          </div>  
          <div class="form-group">
            <input class="form-control" name='time' type='text' placeholder='time' />
          </div>
          <div class="form-group">  
            <input class="form-control" name='location' type='text' placeholder='location' />
          </div>
          <div class="form-group">  
            <textarea class="form-control" name="description" id="description"></textarea>
          </div>
          <div class="form-group">  
            <input class="form-control" name='organizer' type='text' placeholder='organizer' />            
          </div>
            <button class="btn btn-primary btn-default btn-md">Submit</button>
          </form>          
        </div>  
      </div>
  </div>
</div>  
